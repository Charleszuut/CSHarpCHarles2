@{
    ViewData["Title"] = "Projects";
}

<section class="page-shell">
    <div class="page-header">
        <div>
            <h1 class="page-title">Projects</h1>
            <p class="page-subtitle">Manage and monitor all software development projects</p>
        </div>
        <button class="btn btn-primary">+ New Project</button>
    </div>

    <div class="filter-bar">
        <input class="form-control" placeholder="Search projects..." />
        <select class="form-select">
            <option>All Status</option>
        </select>
        <select class="form-select">
            <option>All Priority</option>
        </select>
    </div>

    <div class="grid grid--stats">
        <article class="stat-card"><span>Total Projects</span><strong>5</strong></article>
        <article class="stat-card"><span>In Progress</span><strong class="text-primary">2</strong></article>
        <article class="stat-card"><span>Completed</span><strong class="text-success">1</strong></article>
        <article class="stat-card"><span>At Risk</span><strong class="text-warning">2</strong></article>
    </div>

    <div class="grid grid--cards">
        <article class="project-card">
            <header class="project-card__header">
                <div>
                    <h3 class="project-card__title">E-Commerce Platform Redesign</h3>
                    <p class="project-card__desc">Complete overhaul of the customer-facing e-commerce platform with improved UX and performance optimizations.</p>
                </div>
                <span class="badge badge--warning">High</span>
            </header>

            <div class="project-card__status">
                <span class="badge badge--info">In Progress</span>
                <span class="project-card__percent">62%</span>
            </div>
            <div class="progress"><div class="progress__bar progress__bar--warning" style="width: 62%"></div></div>

            <div class="project-card__divider"></div>

            <div class="project-card__details">
                <div class="project-kv">
                    <div class="project-kv__label">Duration</div>
                    <div class="project-kv__value">1/15/2024 - 6/30/2024</div>
                </div>
                <div class="project-kv">
                    <div class="project-kv__label">Budget</div>
                    <div class="project-kv__value">$145,000 / $250,000</div>
                </div>
            </div>

            <footer class="project-card__footer">
                <div class="project-card__owner">
                    <span>SJ</span>
                    <div>
                        <strong>Sarah Johnson</strong>
                        <div class="text-muted">Lead Product Manager</div>
                    </div>
                </div>
            </footer>
        </article>
        <article class="project-card">
            <header class="project-card__header">
                <div>
                    <h3 class="project-card__title">Mobile App Development</h3>
                    <p class="project-card__desc">Native mobile application for iOS and Android platforms.</p>
                </div>
                <span class="badge badge--danger">Critical</span>
            </header>

            <div class="project-card__status">
                <span class="badge badge--info">In Progress</span>
                <span class="project-card__percent">45%</span>
            </div>
            <div class="progress"><div class="progress__bar" style="width: 45%"></div></div>

            <div class="project-card__divider"></div>

            <div class="project-card__details">
                <div class="project-kv">
                    <div class="project-kv__label">Duration</div>
                    <div class="project-kv__value">2/1/2024 - 8/15/2024</div>
                </div>
                <div class="project-kv">
                    <div class="project-kv__label">Budget</div>
                    <div class="project-kv__value">$120,000 / $350,000</div>
                </div>
            </div>

            <footer class="project-card__footer">
                <div class="project-card__owner">
                    <span>DC</span>
                    <div>
                        <strong>David Chen</strong>
                        <div class="text-muted">Mobile Engineering</div>
                    </div>
                </div>
            </footer>
        </article>
        <article class="project-card">
            <header class="project-card__header">
                <div>
                    <h3 class="project-card__title">API Gateway Implementation</h3>
                    <p class="project-card__desc">Centralized API gateway for microservices architecture.</p>
                </div>
                <span class="badge badge--neutral">Medium</span>
            </header>

            <div class="project-card__status">
                <span class="badge badge--muted">Planning</span>
                <span class="project-card__percent">15%</span>
            </div>
            <div class="progress"><div class="progress__bar progress__bar--danger" style="width: 15%"></div></div>

            <div class="project-card__divider"></div>

            <div class="project-card__details">
                <div class="project-kv">
                    <div class="project-kv__label">Duration</div>
                    <div class="project-kv__value">4/1/2024 - 9/30/2024</div>
                </div>
                <div class="project-kv">
                    <div class="project-kv__label">Budget</div>
                    <div class="project-kv__value">$15,000 / $180,000</div>
                </div>
            </div>

            <footer class="project-card__footer">
                <div class="project-card__owner">
                    <span>LA</span>
                    <div>
                        <strong>Lisa Anderson</strong>
                        <div class="text-muted">Platform Architect</div>
                    </div>
                </div>
            </footer>
        </article>
    </div>
</section>
