@model CSHarpCHarles2.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<section class="page-shell">
    <div class="page-header">
        <div>
            <h1 class="page-title">Reset Password</h1>
            <p class="page-subtitle">Set a new password for @Model.Email</p>
        </div>
        <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
    </div>

    <section class="card">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Email" />

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label"></label>
                <input asp-for="NewPassword" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Reset Password</button>
        </form>
    </section>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
