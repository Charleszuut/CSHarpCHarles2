@{
    ViewData["Title"] = "Resources";
}

<section class="page-shell">
    <div class="page-header">
        <div>
            <h1 class="page-title">Resources</h1>
            <p class="page-subtitle">Manage team members and resource allocation</p>
        </div>
        <button class="btn btn-primary">+ Add Resource</button>
    </div>

    <div class="filter-bar">
        <input class="form-control" placeholder="Search resources..." />
        <select class="form-select">
            <option>All Roles</option>
        </select>
        <select class="form-select">
            <option>All Availability</option>
        </select>
    </div>

    <div class="grid grid--stats">
        <article class="stat-card"><span>Total Resources</span><strong>8</strong></article>
        <article class="stat-card"><span>Available</span><strong class="text-success">8</strong></article>
        <article class="stat-card"><span>Avg. Availability</span><strong class="text-primary">86%</strong></article>
        <article class="stat-card"><span>Total Assignments</span><strong class="text-warning">10</strong></article>
    </div>

    <div class="grid grid--cards">
        <article class="resource-card">
            <div class="resource-card__header">
                <span class="avatar">SJ</span>
                <div>
                    <strong>Sarah Johnson</strong>
                    <div class="text-muted">Project Manager</div>
                </div>
            </div>
            <div class="resource-card__progress">
                <span>Availability</span>
                <div class="progress"><div class="progress__bar progress__bar--success" style="width: 80%"></div></div>
                <span>80%</span>
            </div>
            <div class="resource-card__meta">
                <div class="resource-kv">
                    <span class="resource-kv__label">Assigned Projects</span>
                    <span class="resource-kv__value">2</span>
                </div>
                <div>Skills
                    <div class="pill-group">
                        <span class="pill">Agile</span>
                        <span class="pill">Scrum</span>
                        <span class="pill">Risk Management</span>
                    </div>
                </div>
            </div>
        </article>
        <article class="resource-card">
