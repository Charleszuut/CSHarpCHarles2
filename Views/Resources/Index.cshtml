        <article class="resource-card">
            <div class="resource-card__header">
                <span class="avatar">JS</span>
                <div>
                    <strong>Jane Smith</strong>
                    <div class="text-muted">Designer</div>
                </div>
            </div>
            <div class="resource-card__progress">
                <span>Availability</span>
                <div class="progress"><div class="progress__bar progress__bar--success" style="width: 100%"></div></div>
